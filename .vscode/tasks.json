{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "Devantler.DataMesh.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch api-gateway",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "src/Devantler.DataMesh.ApiGateway",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch platworm-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "src/Devantler.DataMesh.Platform.Web",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch dataspace-service",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "src/Services/Devantler.DataMesh.Services.Dataspace",
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}