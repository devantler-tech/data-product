{
    "version": "0.2.0",
    "compounds": [
        {
            "name": ".NET Core Launch (compound)",
            "configurations": [
                ".NET Core Launch (web)",
                ".NET Core Launch (api-gateway)",
                ".NET Core Launch (data-product-service)",
                ".NET Core Launch (provisioning-service)"
            ],
            "stopAll": true,
        }
    ],
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/DevAntler.DataMesh.Platform.Web/bin/Debug/net6.0/DevAntler.DataMesh.Platform.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DevAntler.DataMesh.Platform.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Launch (api-gateway)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/DevAntler.DataMesh.ApiGateway/bin/Debug/net6.0/DevAntler.DataMesh.ApiGateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/DevAntler.DataMesh.ApiGateway",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Launch (data-product-service)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Services/DevAntler.DataMesh.DataProductService/bin/Debug/net6.0/DevAntler.DataMesh.DataProductService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/DevAntler.DataMesh.DataProductService",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Launch (provisioning-service)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Services/DevAntler.DataMesh.ProvisioningService/bin/Debug/net6.0/DevAntler.DataMesh.ProvisioningService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/DevAntler.DataMesh.ProvisioningService",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}