{
    "$schema": "http://json-schema.org/schema",
    "title": ".data-product",
    "description": "JSON Schema for Data Product configurations",
    "type": "object",
    "properties": {
        "domain": {
            "type": "object",
            "description": "The domain that the data product leverages.",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the domain."
                },
                "version": {
                    "type": "string",
                    "pattern": "^v?(\\d+(?:\\.\\d+)*)$",
                    "description": "The version of the domain. (e.g. v1.0)"
                },
                "description": {
                    "type": "string",
                    "description": "A description of the domain."
                }
            },
            "required": [
                "name",
                "version"
            ]
        },
        "owner": {
            "type": "object",
            "description": "The owner of the data product.",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the owner."
                },
                "email": {
                    "type": "string",
                    "description": "The email of the owner."
                },
                "organization": {
                    "type": "string",
                    "description": "The organization of the owner."
                },
                "website": {
                    "type": "string",
                    "description": "The website of the owner."
                },
                "phone": {
                    "type": "string",
                    "description": "The phone number of the owner."
                }
            },
            "required": [
                "name"
            ]
        },
        "schemas": {
            "type": "array",
            "description": "The schemas for the data product.",
            "items": {
                "type": "object",
                "description": "A schema for the data product.",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the schema."
                    },
                    "version": {
                        "type": "string",
                        "pattern": "^v?(\\d+(?:\\.\\d+)*)$",
                        "description": "The version of the schema. (e.g. v1.0)"
                    },
                    "description": {
                        "type": "string",
                        "description": "A description of the schema."
                    },
                    "properties": {
                        "type": "array",
                        "description": "The properties of the schema.",
                        "items": {
                            "type": "object",
                            "description": "A property of the schema.",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "The name of the property."
                                },
                                "type": {
                                    "type": "string",
                                    "description": "The type of the property.",
                                    "examples": [
                                        "string",
                                        "number",
                                        "boolean",
                                        "Type",
                                        "string[]",
                                        "number[]",
                                        "boolean[]",
                                        "Type[]"
                                    ]
                                }
                            },
                            "required": [
                                "name",
                                "type"
                            ]
                        }
                    }
                },
                "required": [
                    "name",
                    "version",
                    "properties"
                ]
            }
        },
        "features": {
            "type": "object",
            "description": "Enabled or disabled features for the data product.",
            "properties": {
                "apis": {
                    "type": "array",
                    "description": "Which APIs to use for the data product.",
                    "items": {
                        "type": "string",
                        "description": "The name of the API.",
                        "examples": [
                            "rest",
                            "graphql",
                            "grpc"
                        ]
                    },
                    "examples": [
                        [
                            "rest"
                        ],
                        [
                            "graphql"
                        ],
                        [
                            "grpc"
                        ],
                        [
                            "rest",
                            "graphql"
                        ],
                        [
                            "rest",
                            "grpc"
                        ],
                        [
                            "graphql",
                            "grpc"
                        ],
                        [
                            "rest",
                            "graphql",
                            "grpc"
                        ]
                    ]
                },
                "database": {
                    "type": "string",
                    "description": "Which database to use for the data product.",
                    "default": "infer-from-schemas",
                    "examples": [
                        "relational",
                        "document",
                        "graph",
                        "relational-sqlite",
                        "relational-postgresql",
                        "document-mongodb",
                        "graph-neo4j",
                        "infer-from-schemas"
                    ]
                },
                "caching": {
                    "type": "boolean",
                    "description": "Whether or not to enable caching for the data product.",
                    "default": false
                },
                "metadata": {
                    "type": "boolean",
                    "description": "Whether or not to enable metadata for the data product.",
                    "default": false
                },
                "authentication": {
                    "type": "boolean",
                    "description": "Whether or not to enable authentication for the data product.",
                    "default": false
                },
                "authorisation": {
                    "type": "boolean",
                    "description": "Whether or not to enable authorisation for the data product.",
                    "default": false
                },
                "metrics": {
                    "type": "boolean",
                    "description": "Whether or not to enable metrics for the data product.",
                    "default": false
                },
                "tracing": {
                    "type": "boolean",
                    "description": "Whether or not to enable tracing for the data product.",
                    "default": false
                },
                "logging": {
                    "type": "boolean",
                    "description": "Whether or not to enable logging for the data product.",
                    "default": false
                },
                "health": {
                    "type": "boolean",
                    "description": "Whether or not to enable health for the data product.",
                    "default": false
                }
            },
            "required": [
                "apis",
                "database"
            ]
        }
    },
    "required": [
        "domain",
        "owner",
        "schemas"
    ],
    "additionalProperties": false
}
