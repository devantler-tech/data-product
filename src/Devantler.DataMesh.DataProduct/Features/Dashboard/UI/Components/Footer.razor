@using Microsoft.Extensions.Options;
@using Devantler.DataMesh.DataProduct.Configuration.Options;

@inject IOptions<DataProductOptions> Options

<Bar Background="Background.Light" ThemeContrast="ThemeContrast.Light" Breakpoint="Breakpoint.Desktop">
    <BarMenu>
        <BarStart>
            <Text>Owned by <Text TextWeight="TextWeight.Bold">@Options.Value.Owner.Name</Text></Text>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="@Options.Value.License.Url"><Text>Licensed under <Text
                            TextWeight="TextWeight.Bold">@Options.Value.License.Name</Text></Text></BarLink>

            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>